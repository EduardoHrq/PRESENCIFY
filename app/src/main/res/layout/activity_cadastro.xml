<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="50sp"
    tools:context=".login_cadastro.Cadastro">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:background="#000000"
        app:srcCompat="@drawable/hat" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="Nome Completo"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_input"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:inputType="text"
        android:padding="15sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:text="Nome de Usuário"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_input"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:inputType="text"
        android:padding="15sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:text="Número de Celular"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_input"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:inputType="text"
        android:padding="15sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:text="E-mail"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_input"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:inputType="text"
        android:padding="15sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:text="Senha"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_input"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:inputType="text|textPassword"
        android:padding="15sp"
        android:textColor="#000000" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="Politica de privacidade"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200sp"
        android:layout_height="75sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/rounded_input"
        android:text="Concluir Cadastro"
        android:textAllCaps="false"
        android:textStyle="bold" />

</LinearLayout>